<Window x:Class="CaliburnTreeView.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaliburnTreeView.Views"
        mc:Ignorable="d"
        Title="ShellView" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu IsMainMenu="True" Grid.Row="0">
            <MenuItem Header="Change Views">
                <MenuItem Header="Dashboard" x:Name="ShowDashboard"/>
                <MenuItem Header="FamilyTree" x:Name="ShowFamilyTree"/>
            </MenuItem>
        </Menu>
        <ContentControl x:Name="ActiveItem" Grid.Row="1"/>
    </Grid>
</Window>
